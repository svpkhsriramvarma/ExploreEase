<% layout("/layouts/boilerplate.ejs") -%>

<div class="row mt-3">
    <h1 class="col-7 offset-1">Login on WonderLust</h1>
    <div class="col-7 offset-1">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-2">
              <label for="username" class="form-label">Name</label>
              <input
                type="text"
                name="username"
                id="username"
                class="form-control"
                required
              />
            </div>
            
            <div class="mb-2">
                <label for="possword" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                />
               
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>